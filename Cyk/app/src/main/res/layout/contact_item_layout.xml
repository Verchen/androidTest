<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="horizontal"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorTheme"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/id_contact_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="张某某"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/id_contact_relation_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="母亲"
                android:textColor="@color/colorBlack"
                android:layout_toRightOf="@id/id_contact_name_tv"/>

        </LinearLayout>

        <TextView
            android:id="@+id/id_contact_phone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号码：13261301878"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/id_contact_name_tv"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorTheme"/>

    </LinearLayout>
    
    <TextView
        android:id="@+id/id_contact_update_tv"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:background="@color/colorTheme"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="10dp"
        android:text="修改"
        android:gravity="center"
        android:layout_alignParentRight="true"/>

</LinearLayout>

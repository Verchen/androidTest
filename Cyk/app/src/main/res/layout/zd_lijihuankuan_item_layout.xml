<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:padding="5dp">
        <TextView
            android:id="@+id/yinghuan_jine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="借款金额6000元 | 14天期限"
            android:textColor="#000000"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTheme"
        android:padding="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="本金"/>
        <TextView
            android:id="@+id/yinghuan_benjin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5000"
            android:textColor="#ffffff"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="利息/服务费"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/yinghuan_lixi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5000"
            android:layout_alignParentRight="true"
            android:textColor="#000000"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTheme"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="还款方式"/>
        <TextView
            android:id="@+id/yinghuan_huanType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="等额本金"
            android:textColor="#ffffff"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="到期时间"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/yinghuan_huanDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="明天"
            android:layout_alignParentRight="true"
            android:textColor="#000000"/>

    </RelativeLayout>

    <Button
        android:id="@+id/yinghuan_lijihuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTheme"
        android:textColor="#ffffff"
        android:text="立即还款"/>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="#ffffff">

    <TextView
        android:id="@+id/id_jiekaun_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textColor="#000000"
        android:text="LV1借款"/>

    <TextView
        android:id="@+id/id_jine_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5000.00"
        android:layout_alignParentLeft="true"
        android:textColor="#000000"
        android:layout_below="@id/id_jiekaun_type"/>

    <ImageView
        android:id="@+id/id_youjiantou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/youjiantou"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/id_yihuan_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已还款"
        android:layout_toLeftOf="@id/id_youjiantou"
        android:layout_marginRight="10dp"
        android:layout_alignParentTop="true"
        android:layout_below="@id/id_jiekaun_type"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017.4.4 借"
        android:layout_toLeftOf="@id/id_youjiantou"
        android:layout_marginRight="10dp"
        android:textColor="#000000"
        android:layout_below="@id/id_yihuan_tv"/>

</RelativeLayout>
